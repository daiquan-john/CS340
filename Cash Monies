import java.util.*;

public class PizzaShopMoney {
	static double sum;
	static Stack<String> myStack = new Stack<>();

public static void theGreeting(){  
    Scanner scanner = new Scanner(System.in);
    String inputOne = scanner.next();
    
    if (inputOne.equals("Yes") == true){
        System.out.println(theMenu());
        System.out.println("\nWhat would you like to Order?");
        theOrder();
    }
    
    else if (inputOne.equals("No") == true){
        System.out.println("\nWhat would you like to order?");
        theOrder();
    }
    
    else {
        System.out.println("Please respond with 'Yes' or 'No'");
        theGreeting();
        System.out.println("");
    }
}

public static String theMenu(){
   String menu = "\nCheese - $5.99" + "\nPepperoni - $6.19" + 
   "\nSupreme - $8.99" + "\nVegan - $7.59" + "\nHawaiian - $6.59" + 
   "\nAll drinks $1.25";
   return menu;
}
public static void orderHelper() {
	Scanner scanner3 = new Scanner(System.in);
	String inputFour = scanner3.next();
	
	if (inputFour.equals("Yes") == true){
        System.out.println("\nYour total is: $" + sum);
    }
    else if (inputFour.equals("No") == true){
        System.out.println("What else would you like?");
        theOrder();
    }
    else {
        System.out.println("Please respond with 'Yes' or 'No'");
        orderHelper();
    }
}
public static void theOrder(){
    Scanner scanner2 = new Scanner(System.in);
    String inputTwo = scanner2.next();
    
    
    if (inputTwo.equals("Cheese") == true){
        sum = sum + 5.99;
        myStack.push("Cheese Pizza");
        System.out.println("\nWill that be all for you?");
        String inputThree = scanner2.next();
        
        if (inputThree.equals("Yes") == true){
            stackCall();
            System.out.println("\nAnd your total is: $" + sum);
        }
        else if (inputThree.equals("No") == true){
            System.out.println("What else would you like?");
            theOrder();
        }
        else {
            System.out.println("Please respond with 'Yes' or 'No'");
            orderHelper();
        }
    }
    
    if (inputTwo.equals("Pepperoni") == true){
        sum = sum + 6.19;
        myStack.push("Pepperoni Pizza");
        System.out.println("\nWill that be all for you?");
        String inputThree = scanner2.next();
        
        if (inputThree.equals("Yes") == true){
            stackCall();
            System.out.println("\nAnd your total is: $" + sum);
        }
        else if (inputThree.equals("No") == true){
            System.out.println("What else would you like?");
            theOrder();
        }
        else {
            System.out.println("Please respond with 'Yes' or 'No'");
            orderHelper();
        }
    }
    
    if (inputTwo.equals("Supreme") == true){
        sum = sum + 8.99;
        myStack.push("Supreme Pizza");
        System.out.println("\nWill that be all for you?");
        String inputThree = scanner2.next();
        
        if (inputThree.equals("Yes") == true){
            stackCall();
            System.out.println("\nAnd your total is: $" + sum);
        }
        else if (inputThree.equals("No") == true){
            System.out.println("What else would you like?");
            theOrder();
        }
        else {
            System.out.println("Please respond with 'Yes' or 'No'");
            orderHelper();
        }
    }
    
     if (inputTwo.equals("Vegan") == true){
        sum = sum + 7.59;
        myStack.push("Vegan Pizza");
        System.out.println("\nWill that be all for you?");
        String inputThree = scanner2.next();
        
        if (inputThree.equals("Yes") == true){
            stackCall();
            System.out.println("\nAnd your total is: $" + sum);
        }
        else if (inputThree.equals("No") == true){
            System.out.println("What else would you like?");
            theOrder();
        }
        else {
            System.out.println("Please respond with 'Yes' or 'No'");
            orderHelper();
        }
    }
    
     if (inputTwo.equals("Hawaiian") == true){
        sum = sum + 6.59;
        myStack.push("Hawaiian Pizza");
        System.out.println("\nWill that be all for you?");
        String inputThree = scanner2.next();
        
        if (inputThree.equals("Yes") == true){
            stackCall();
            System.out.println("\nAnd your total is: $" + sum);
        }
        else if (inputThree.equals("No") == true){
            System.out.println("What else would you like?");
            theOrder();
        }
        else {
            System.out.println("Please respond with 'Yes' or 'No'");
            orderHelper();
        }
    }
    
    if (inputTwo.equals("Drink") == true){
        sum = sum + 1.25;
        myStack.push("A Drink");
        System.out.println("\nWill that be all for you?");
        String inputThree = scanner2.next();
        
        if (inputThree.equals("Yes") == true){
            stackCall();
            System.out.println("\nAnd your total is: $" + sum);
        }
        else if (inputThree.equals("No") == true){
            System.out.println("What else would you like?");
            theOrder();
        }
        else {
            System.out.println("Please respond with 'Yes' or 'No'");
            orderHelper();
        }
    }
    else if (inputTwo.equals("Cheese") == false && inputTwo.equals("Pepperoni") == false && 
    inputTwo.equals("Supreme") == false && inputTwo.equals("Vegan") == false && 
    inputTwo.equals("Hawaiian") == false && inputTwo.equals("Drink") == false){
        System.out.println("Please choose something from the menu");
        theOrder();
    }
     
}

public static void stackCall(){
    System.out.println("\nYou ordered: ");
    while (!myStack.isEmpty()){
        System.out.println(myStack.pop());
    }
}

public static void main(String args[]) {
    
    
   
    System.out.println("Welcome to Wright and Co. Pizza");
    System.out.println("Would you like to see our menu? Yes or No");
    theGreeting();
    
    
}
}







